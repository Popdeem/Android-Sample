<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pd_feed_list_background_color"
    android:padding="10dp">

    <com.popdeem.sdk.uikit.widget.PDUIBezelImageView
        android:id="@+id/pd_feed_profile_image_view"
        android:layout_width="@dimen/pd_feed_profile_image_dimen"
        android:layout_height="@dimen/pd_feed_profile_image_dimen"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:maskDrawable="@drawable/circle_mask" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pd_feed_profile_image_view"
        android:layout_toRightOf="@+id/pd_feed_profile_image_view"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/pd_feed_user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pd_feed_item_name_text_color"
            android:textStyle="bold"
            tools:text="Hello, world" />

        <TextView
            android:id="@+id/pd_feed_user_comment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/pd_feed_item_comment_text_color"
            tools:text="Hello, world" />

        <ImageView
            android:id="@+id/pd_feed_shared_image_view"
            android:layout_width="@dimen/pd_feed_shared_image_dimen"
            android:layout_height="@dimen/pd_feed_shared_image_dimen"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:background="@android:color/black" />

    </LinearLayout>

</RelativeLayout>