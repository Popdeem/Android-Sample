<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/pd_progress_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/pd_notification_dialog_title_text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="@string/pd_common_please_wait_text" />

    <TextView
        android:id="@+id/pd_progress_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="@color/pd_notification_dialog_message_text_color"
        android:textSize="15sp"
        tools:text="@string/pd_claim_claiming_reward_text" />

    <ProgressBar
        android:id="@+id/pd_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:progressDrawable="@drawable/pd_progress_drawable" />

</LinearLayout>